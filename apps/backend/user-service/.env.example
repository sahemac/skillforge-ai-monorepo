# Environment Configuration
ENVIRONMENT=development
DEBUG=True

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME="SkillForge AI User Service"

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/skillforge_users
POSTGRES_USER=username
POSTGRES_PASSWORD=password
POSTGRES_DB=skillforge_users
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Security & Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","https://skillforge-ai.com"]
ALLOWED_HOSTS=["localhost","127.0.0.1","skillforge-ai.com"]

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# Email Configuration
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@skillforge-ai.com
EMAILS_FROM_NAME="SkillForge AI"

# First Superuser
FIRST_SUPERUSER=admin@skillforge-ai.com
FIRST_SUPERUSER_PASSWORD=changethis123

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=/tmp/uploads

# External Services
NOTIFICATION_SERVICE_URL=http://notification-service:8001
EMAIL_SERVICE_URL=http://email-service:8002

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Testing
TEST_DATABASE_URL=postgresql+asyncpg://test:test@localhost:5432/skillforge_users_test